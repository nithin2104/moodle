<div class="no-overflow">
    <div class="table-responsive">
        <table class="generaltable table-sm" id="mytable">
            {{#details}}
            <tr>
                <th>{{#str}}fullname, local_message{{/str}}</th>
                <td>{{firstname}} {{lastname}}</td>
            </tr>
            <tr>
                <th>{{#str}}userid, local_message{{/str}}</th>
                <td>{{userid}}</td>
            </tr>
            <tr>
                <th>{{#str}}description, local_message{{/str}}</th>
                <td>{{description}}</td>
            </tr>
            <tr>
                <th>{{#str}}timecreated, local_message{{/str}}</th>
                <td>{{#userdate}} {{timecreated}} * 1000, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}</td>
            </tr><tr>
                <th>{{#str}}timeupdated, local_message{{/str}}</th>
                <td>{{#userdate}} {{timeupdated}} * 1000, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}</td>
            </tr>
            {{/details}}
        </table>

    </div>

</div>
