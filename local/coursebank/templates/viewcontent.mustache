<style>
    .dropdown-scrollable {
        max-height: 190px;
        overflow-y: auto;
    }

</style>
<div class="my-5">
    <div class="mb-2">
        <div class="d-inline-block">
            {{#allowedcontexts}}
            {{> core/single_select }}
            {{/allowedcontexts}}
        </div>
        <div class="d-inline float-right">
            {{#tools}}
            {{#dropdown}}
                {{>core_contentbank/bankcontent/toolbar_dropdown}}
            {{/dropdown}}
            {{^dropdown}}
                <a href="{{ link }}" class="icon-no-margin btn btn-secondary text-nowrap" title="{{ name }}" data-action="{{ action }}">
                    {{#pix}} {{{ icon }}} {{/pix}} {{{ name }}}
                </a>
            {{/dropdown}}
            {{/tools}}
            <a class="icon-no-margin btn btn-secondary text-nowrap" title="upload" data-action="upload">
                <i class="icon fa fa-upload fa-fw" aria-hidden="true"></i> upload
            </a>
        </div>
    </div>
    <div class="pb-3 border">
            <div class="bg-light p-2 border-bottom">
                {{#pix}} i/folder {{/pix}}
            </div>
            <div class="p-3 d-flex flex-wrap justify-content-start align-items-center" data-region="filearea">
                {{#coursebank}}
                <div class="m-2 mr-3" style="width: 100px;">
                    <div class="mx-auto m-2">
                        {{#h5picon}}
                        {{#icon}}
                        <a href="view.php?contextid={{contextid}}&id={{id}}" class="clamp-2 word-break-all">
                            <img src="{{icon}}" alt="not img" class="mx-auto mb-2"
                            style="height: 64px; width: 135px; position: relative; right: 30px;">
                            <p>{{name}}</p>
                        </a>
                        {{/icon}}
                        {{/h5picon}}
                        {{^h5picon}}
                        {{#icon}}
                        <a href="view.php?contextid={{contextid}}&id={{id}}" class="clamp-2 word-break-all">
                            <img src="{{icon}}" alt="not img" class="mx-auto mb-2" style="height: 64px; width: 64px;">
                            <p>{{name}}</p>
                        </a>
                        {{/icon}}
                        {{/h5picon}}
                    </div>
                </div>
                {{/coursebank}}
                {{^coursebank}}
                    <div class="d-flex flex-wrap p-2" data-region="filearea">
                        <div class="w-100 p-3 text-center text-muted">
                            {{#str}} nocontentavailable, local_coursebank {{/str}}
                        </div>
                    </div>
                {{/coursebank}}
            </div>
    </div>

</div>
