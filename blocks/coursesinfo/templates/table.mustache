<h1 class="text-center">{{#str}}pluginname,block_coursesinfo{{/str}}</h1>
{{#studentsTable}}
    <table class="generaltable mytable table table-bordered" style="border-color:black;">
        <thead >
            <tr >
                <th class="text-center"style="border-color:black">{{#str}}courses,block_coursesinfo{{/str}}</th>
                <th class="text-center"style="border-color:black">{{#str}}teacher,block_coursesinfo{{/str}}</th>
                <th class="text-center"style="border-color:black">{{#str}}c_complition,block_coursesinfo{{/str}}</th>
                   
            </tr>
        </thead>
        
        <tbody>
             {{#students}}
            <tr>
                <td class="text-center"style="border-color:black"><a href="{{wwwroot}}/blocks/courseactivities/block_activitytable.php?id={{coid}}">{{fullname}}</a></td>
                <td class="text-center"style="border-color:black"><a class="theme_text_color1 mr-1" data-action="allteachers" data-id = "{{teachers}}" title="Teachers list" >{{teachersnames}}</a></td>
                <td class="text-center"style="border-color:black">{{cc_percentage}}</td>
            </tr>
             {{/students}}
        </tbody>
    </table>
{{/studentsTable}}
{{#teacherTable}}

    <table class="generaltable mytable table table-bordered" style="border-color:black;">

        <thead>
            <tr>
                <th class="text-center" style="border-color:black" >{{#str}}courses,block_coursesinfo{{/str}}</th>
                <th class="text-center" style="border-color:black">{{#str}}students,block_coursesinfo{{/str}}</th>
                <th class="text-center" style="border-color:black">{{#str}}c_complition,block_coursesinfo{{/str}}</th>                   
            </tr>
        </thead>

        <tbody>
            {{#teacher}}
            <tr>
                <td class="text-center" style="border-color:black"><a href="{{wwwroot}}/blocks/courseactivities/block_activitytable.php?id={{coid}}">{{fullname}}</a></td>
                <td class="text-center" style="border-color:black"><a class="theme_text_color1 mr-1" data-action="allstudents" data-id ="{{student}}"  title="Students list">{{students}}</a></td>
                <td class="text-center" style="border-color:black">{{cccompletion}}</td>
            </tr>
            {{/teacher}}
        </tbody>
  
    </table>
{{/teacherTable}}
   


