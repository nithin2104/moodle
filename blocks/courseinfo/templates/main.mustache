{{#studenttable}}
<h6>{{#str}}studenttable, block_courseinfo{{/str}}</h6>
<div class="table-responsive no-overflow" id="courseinfotable">
    <table class="generaltable" id="studenttable">
        <thead>
            <tr>
                <th>{{#str}}courseid, block_courseinfo{{/str}}</th>
                <th>{{#str}}coursename, block_courseinfo{{/str}}</th>
                <th>{{#str}}teachername, block_courseinfo{{/str}}</th>
                <th>{{#str}}coursecompletionpercentage, block_courseinfo{{/str}}</th>
            </tr>
        </thead>
        <tbody>
          {{#enroled_courses_as_student}}
        <tr>
          <td>{{ course_id }}</td>
          <td> <a href="{{wwwroot}}\course\view.php?id={{course_id}}">{{ course_name }}</a></td>
          <td>{{ teachers }}</td>
          <td>{{ cc_percentage }}</td>
        </tr>
        {{/enroled_courses_as_student}}
      </tbody>
    </table>
    <div class="float-right m-2">
        <button role="button" class="btn text-info" id="seeMoreRecords">{{#str}}more, block_courseinfo{{/str}}</button>
        <button role="button" class="btn text-danger" id="seeLessRecords">{{#str}}less, block_courseinfo{{/str}}</button>
    </div>
</div>
{{/studenttable}}



{{#teachertable}}
<h6>{{#str}}teachertable, block_courseinfo{{/str}}</h6>
<div class="table-responsive no-overflow" id="courseinfotable2">
    <table class="generaltable" id="teachertable">
        <thead>
            <tr>
                <th>{{#str}}courseid, block_courseinfo{{/str}}</th>
                <th>{{#str}}coursename, block_courseinfo{{/str}}</th>
                <th>{{#str}}noofstudents, block_courseinfo{{/str}}</th>
                <th>{{#str}}noofstudentsccomplted, block_courseinfo{{/str}}</th>
            </tr>
        </thead>
        <tbody>
          {{#courses_as_teacher}}
        <tr>
          <td>{{ course_id }}</td>
          <td> <a href="\moodle\course\view.php?id={{course_id}}">{{ course_name }}</a></td>
          <td> <a data-action="viewstudents" data-list="{{students}}">{{ enroled }}</a></td>
          <td>{{ c_completed }}</td>
        </tr>
        {{/courses_as_teacher}}
      </tbody>
    </table>
    <div class="float-right m-2">
        <button role="button" class="btn text-info" id="seeMoreRecords2">{{#str}}more, block_courseinfo{{/str}}</button>
        <button role="button" class="btn text-danger" id="seeLessRecords2">{{#str}}less, block_courseinfo{{/str}}</button>
    </div>
</div>
{{/teachertable}}
